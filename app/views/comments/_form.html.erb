<%= form_for(@comment) do |f| %>  <!-- pass through what you want the form to be for -->
	<% if @comment.errors.any? %>  <!-- if there is an error, it will display error, if there are more than one they will say "errors" -->
	<div class="error_explanation">
		<h2><%= pluralize(@comment.errors.count,"error") %> prohibited this blog post from being saved: </h2>
		<ul>
			<% @errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<div class="form-group">
		<%= f.text_field :author, class: "form-control", placeholder: "What is your name?" %>
</div>
<div class="form-group">
		<%= f.text_area :comment_entry, class: "form-control", rows: "5", placeholder: "Express Yourself!!" %>
</div>
<div class="form-group hidden">
	<%= f.number_field :blog_post_id, value: @blog_post.id %>  <!-- .id means I want the comment to be set to the blogpost -->
</div>
<div class="actions">
	<%= f.submit "Post Your Comment", class: "btn btn-primary" %>
</div>	

<% end %>